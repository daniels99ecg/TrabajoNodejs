                        <td>
                           <a href="/ficha_tecnica/eliminarf/{{_id}}"> <button type="button" class="btn btn-danger">Eliminar</button></a>
                        </td>
                    </tr>
                     
                {{/each}}
             
               
            
            </tbody>
        </table>
        </div>

