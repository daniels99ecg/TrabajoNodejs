 {{>head title='Usuarios'}}
 {{>nav}}


<br>
 <div style="width: 30%; margin-left:15%;">
    <a href="/usuarios/create"> <button type="button" class="btn btn-primary">Registrar</button></a>
 
    <form action="/usuarios/buscar/{{title._id}}" method="post" >
       <br>
       
        <input type="text" name="id" class="form-control" placeholder="Buscar...">
       
    <button class="btn btn-primary" >Buscar</button>

    </form>
    </div>

     <div style="width: 70%; height:600px; margin-left:15%; overflow-y:scroll; overflow-x:hidden;">
        <table class="table table-striped">
            <tr>
                <th scope="col">Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>Ubicacion</th>
                <th>Estado</th>
                <th>Acccion</th>
            </tr>
            <tbody>
           
             
                {{#each title}}
                
                    <tr>
                        <td scope="row">{{_id}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{age}}</td>
                        <td>{{address}}</td>
                        <td>{{activo}}</td>
                        <td>
                            <a href="/usuarios/update/{{_id}}"><button type="button" class="btn btn-primary">Actualizar</button></a>
                        </td>
                        <td>
                           <a href="/usuarios/eliminar/{{_id}}"> <button type="button" class="btn btn-danger">Eliminar</button></a>
                        </td>
                    </tr>
                     
                {{/each}}
             
               
            
            </tbody>
        </table>
        </div>

        {{>footer}}